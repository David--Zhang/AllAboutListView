<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.desmond.allaboutlistview" >

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name=".ListViewAnimations.ListViewAnimationActivity"
            android:label="@string/title_activity_list_view_animation" >
        </activity>
        <activity
            android:name=".ListViewDeletion.ListViewDeletionActivity"
            android:label="@string/title_activity_list_view_deletion" >
        </activity>
        <activity
            android:name=".ListViewRemovalAnimation.ListViewRemovalAnimation"
            android:label="@string/title_activity_list_view_removal_animation" >
        </activity>
        <activity
            android:name=".ListViewCellInsertion.ListViewCellInsertionActivity"
            android:label="@string/title_activity_list_view_cell_insertion" >
        </activity>
        <activity
            android:name=".ListViewDraggingAnimation.ListViewDraggingActivity"
            android:label="@string/title_activity_list_view_dragging" >
        </activity>
        <activity
            android:name=".ListViewExpandingCells.ExpandingCellsActivity"
            android:label="@string/title_activity_expanding_cells" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>
